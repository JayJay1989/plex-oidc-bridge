        <a href="@Model.VerifyUrl" target="_blank" rel="noopener">click here</a>, then approve the sign-in.
    </p>
    <p><strong>Code:</strong> @Model.PlexCode</p>
    <script>
        const redirectUri = "@Model.RedirectUri";
        const verifyUrl = "@Model.VerifyUrl";
        const state = "@Model.State";
        const txnId = "@Model.TxnId";
    </script>
    <script src="~/assets/js/script.js" asp-append-version="true"></script>
</body>
</html>