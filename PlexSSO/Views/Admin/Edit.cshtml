@model AdminEditClientModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Client</title>
    <style>
        body {
            margin: 0;
            background: #f8fafc;
            font-family: system-ui,Segoe UI,Roboto
        }

        main {
            max-width: 720px;
            margin: 24px auto;
            padding: 0 16px
        }

        .card {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 16px
        }

        .row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px
        }

        .row-1 {
            display: grid;
            grid-template-columns: 1fr;
            gap: 12px
        }

        input {
            padding: 10px;
            border: 1px solid #e5e7eb;
            border-radius: 10px
        }

        .btn {
            padding: 10px 14px;
            border-radius: 10px;
            border: 0;
            background: #2563eb;
            color: #fff;
            font-weight: 600
        }

        a {
            color: #2563eb;
            text-decoration: none
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 0
        }
    </style>
</head>
<body>
    <main>
        <header>
            <a asp-action="Index">← Back</a>
            <form method="post" asp-action="Logout"><button class="btn" type="submit" style="background:#e5e7eb;color:#111827">Logout</button></form>
        </header>

        <section class="card">
            <h3>Edit @Model.Item.ClientId</h3>
            <form asp-action="OnPostEdit" method="post">
                <div class="row">
                    @Html.TextBoxFor(model => model.Item.ClientId, new { required = true, placeholder = "ClientID" })
                    @Html.TextBoxFor(model => model.Item.ClientSecret, new { placeholder = "ClientSecret (optional)" })
                </div>
                <div class="row-1">
                    @Html.TextBoxFor(model => model.Item.RedirectUri, new { required = true, placeholder = "Redirect URL" })

                    @Html.LabelFor(model => model.Item.Enabled)
                    @Html.CheckBoxFor(model => model.Item.Enabled)
                </div>
                <p><button class="btn" type="submit">Save</button></p>
            </form>
        </section>
    </main>
</body>
</html>