@page
@model PlexSSO.Pages.PlexAuthorizeModel
<!doctype html>
<html>
<head>
    <title>Plex Sign-In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: system-ui, sans-serif;
            padding: 2rem;
            max-width: 620px;
            margin: auto
        }
    </style>
</head>
<body>
    <h1>Sign in with Plex</h1>
